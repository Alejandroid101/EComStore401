@page
@model ECom.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/styles/reset.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles/style.css" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <h1>Login</h1>

    <div class="container" style="margin-top:20px;">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <label asp-for="Input.Email"></label>
                <input class="form-control" asp-for="Input.Email"></>
            </div>

            <div class="form-group row">
                <label asp-for="Input.Password"></label>
                <input class="form-control" asp-for="Input.Password"></>
            </div>

            <div class="form-group row">
                <label asp-for="Input.RememberMe"></label>
                <input class="form-control" asp-for="Input.RememberMe"></>
            </div>

            <button type="submit" class="bton btn-primary">Login</button>

        </form>
    </div>
</body>
</html>