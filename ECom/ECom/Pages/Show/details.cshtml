@page "{id}"
@model ECom.Pages.Show.detailsModel
@{
    ViewData["Title"] = "details";
}

<h1>details page</h1>
<h1>follow the wireframe to display the product's details. All the info for the specific product will be displayed here.</h1>

<div>
    <h4>Room Details</h4>
    <hr />
    <dl class="row">
        <dt>
            @Html.DisplayFor(Product => Product.Product.Image)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(Product => Product.Product.Name)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayFor(Product => Product.Product.Color)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(Product => Product.Product.Description)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(Product => Product.Product.Sku)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(Product => Product.Product.Year)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(Product => Product.Product.Price)
        </dt>
    </dl>
</div>
<div class="btn btn-primary">
    <a asp-action="Index">Back to List</a>
</div>
